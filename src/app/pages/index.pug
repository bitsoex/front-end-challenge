doctype html
html
  head
    meta(charset='utf-8')
    meta(content='IE=edge,chrome=1' http-equiv='X-UA-Compatible')
    meta(content='width=device-width, user-scalable=no' name='viewport')
    link(rel='stylesheet' href='resources/sprites.css')
    link(rel='stylesheet' href='style.css')
    title Bitso
  body.reset
    #app
      .wrapper
        .flex.center.navigation
          .sp.pad.no-sel.flex.center.sm-auto
            |[![icon "bitso_logo"]]
            span.md-hide.menu
          .sp.pad.no-sel.auto.sm-show Exchange
          .pad.no-sel.auto.align-right.lg-show 1 BTC = 000,000.00 MXN
          .sp.pad.no-sel.menu.md-show Wallet
          .pad.no-sel.menu.md-show Exchange
          .pad.no-sel.md-show Ayuda
          .no-sel.user-menu
            img(src='//placehold.it/45/4e5863/4e5863')
          .pad.no-sel.sm-flex
            span.menu Usuario
          .toggler
            input#cb1.tgl(type = "checkbox")
            label.tgl-btn(for = "cb1")
            span.no-sel.on ☀
            span.no-sel.off ☾
      .topbar
        .wrapper.flex.center
          .push.no-wrap.menu BTC / MXN
          .scroll
            .flex
              span.push Volumen 24 h #[span.light 170.5405818 BTC]
              span.push Máx. #[span.light 304,934.23 MXN]
              span.push Mín. #[span.light 274,934.23 MXN]
              span.push Variación #[span.light +4,061.68 MXN (1.4 %)]
