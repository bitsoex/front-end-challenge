{
  "name": "front-end-challenge",
  "version": "0.0.0",
  "description": "FTL",
  "main": "index.js",
  "author": "Alvaro Cabrera <yo@soypache.co>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint app",
    "dev": "tarima watch -s",
    "build": "tarima -fqe production"
  },
  "tarima": {
    "public": "build",
    "from": "app",
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "rename": [
      "**/{assets,pages,public}/**:{fullpath/2}"
    ],
    "bundle": [
      "**/main.js",
      "**/main.jsx",
      "**/assets/**"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "plugins": [
      "talavera"
    ],
    "pluginOptions": {
      "talavera": {
        "dest": "resources",
        "folders": [
          "1x",
          "2x"
        ]
      }
    },
    "bundleOptions": {
      "extensions": {
        "css": "less",
        "js": "es6"
      },
      "buble": {
        "objectAssign": "Object.assign"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "less": "^2.7.3",
    "less-plugin-autoprefix": "^1.5.1",
    "pug": "^2.0.3",
    "rollup": "^0.58.2",
    "svelte": "^2.5.1",
    "talavera": "^0.6.0",
    "tarima": "^4.1.0",
    "tarima-lr": "^0.4.1"
  }
}
